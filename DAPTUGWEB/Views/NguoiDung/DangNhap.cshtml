
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="~/css/rightsidebar.css" rel="stylesheet" />
<link href="~/css/megamenu.css" rel="stylesheet" />
<link href="~/css/index.css" rel="stylesheet" />
<link href="~/css/menuaccount.css" rel="stylesheet" />
<script src="~/js/megamenu.js"></script>
<script src="https://cdn.jsdelivr.net/gh/vietblogdao/js/districts.min.js" />
<script src="~/js/address.js"></script>
<link href="~/css/Checkout.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-3 mb-3">

            <div class="menu-account ">
                <h3>
                    <span>
                        Tài khoản
                    </span>
                </h3>
                <ul>
                    <li><a href=""> @Html.ActionLink("Đăng nhập", "../NguoiDung/DangNhap")</a></li>
                    <li><a href=""> @Html.ActionLink("Đăng ký", "../NguoiDung/Dangky")</a></li>
                    <li><a href="">Quên mật khẩu</a></li>
                </ul>
            </div>
        </div>

       
        <div class="col-lg-9">


            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="account">  Đăng nhập tài khoản </div>
                    @ViewBag.ThongBao
                    <hr />
                    <div class="form-group">
                        <label class="control-label col-md-3"> Tên đăng nhập</label>
                        <div class="col-md-5">
                            <input type="text" name="Tendn" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"> Mật khẩu</label>
                        <div class="col-md-5">
                            <input type="password" name="Mk" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="submit" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/js/main.js"></script>




          


