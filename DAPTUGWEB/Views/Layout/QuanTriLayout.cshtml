@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />



    <link href="~/css/rightsidebar.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
    <link href="~/css/megamenu.css" rel="stylesheet" />


    <script>$(document).ready(function () { $(".megamenu").megamenu(); });</script>
    <script src="~/js/megamenu.js"></script>



</head>

<body>
    <!-- Thử làm lại nav menu theo cách thường-->
    <nav class="navbar navbar-light bg-dark navbar-expand-md fixed-top">
        @*<span>@Html.ActionLink("DTT SHOES", "../Home")</span>*@
        <span><a href="../Home/Index">DDT SHOES</a></span>
        <button class="navbar-toggler" type="button" data-target="#navResponsive" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse top-header-right" id="navResponsive">
            <ul class="navbar-nav ml-auto">
                <li>@Html.ActionLink("QUẢN TRỊ", "../NhanVien/DangNhap")</li>
                <li>@Html.Action("GioHangPartial", "GioHang") <span>  </span></li>
                <li>@Html.ActionLink("ĐĂNG KÝ", "../NguoiDung/DangKy") <span>  </span></li>
                <li>@Html.ActionLink("ĐĂNG NHẬP", "../NguoiDung/DangNhap")</li>
            </ul>
        </div>
    </nav><br>




    <div class="container-fluid">
        <div id="menu" style="margin-top:60px;">
            <div>
                @Html.ActionLink("GIỚI THIỆU", "../Home/Index", new { @class = "a" }) &nbsp;|&nbsp;
                @Html.ActionLink("NHÂN VIÊN", "../PhongBans/Index", new { @class = "a" })&nbsp;|&nbsp;
                @Html.ActionLink("SẢN PHẨM", "../QuanLySanPham/Index", new { @class = "a" }) &nbsp;|&nbsp;
                @Html.ActionLink("HOÁ ĐƠN", "../QuanLyHoaDon/Index", new { @class = "a" })&nbsp;|&nbsp;
                @Html.ActionLink("TÌM KIẾM", "../NhanViens/TimKiemNC", new { @class = "a" })
                <hr style="display: block;border-top: 1px solid aqua;  margin: 8px 0;" />
            </div>
        </div>
        @RenderBody()
    </div>

    <!---- start-bottom-grids---->
    <!---728x90--->
    <div class="bottom-grids">
        <div class="bottom-top-grids">
            <div class="wrap">
                <div class="bottom-top-grid">
                    <h4>GET HELP</h4>
                    <ul>
                        <li><a href="contact.html">Contact us</a></li>
                        <li><a href="#">Shopping</a></li>
                        <li><a href="#">NIKEiD</a></li>
                        <li><a href="#">Nike+</a></li>
                    </ul>
                </div>
                <div class="bottom-top-grid">
                    <h4>ORDERS</h4>
                    <ul>
                        <li><a href="#">Payment options</a></li>
                        <li><a href="#">Shipping and delivery</a></li>
                        <li><a href="#">Returns</a></li>
                    </ul>
                </div>
                <div class="bottom-top-grid last-bottom-top-grid">
                    <h4>REGISTER</h4>
                    <p>
                        Create one account to manage everything you do with Nike, from your shopping preferences to
                        your
                        Nike+ activity.
                    </p>
                    <a class="learn-more" href="#">Learn more</a>
                </div>
                <div class="clear"> </div>
            </div>
        </div>
        <div class="bottom-bottom-grids">
            <div class="wrap">
                <div class="bottom-bottom-grid">
                    <h6>EMAIL SIGN UP</h6>
                    <p>Be the first to know about new products and special offers.</p>
                    <a class="learn-more" href="#">Sign up now</a>
                </div>
                <div class="bottom-bottom-grid">
                    <h6>GIFT CARDS</h6>
                    <p>Give the gift that always fits.</p>
                    <a class="learn-more" href="#">View cards</a>
                </div>
                <div class="bottom-bottom-grid last-bottom-bottom-grid">
                    <h6>STORES NEAR YOU</h6>
                    <p>Locate a Nike retail store or authorized retailer.</p>
                    <a class="learn-more" href="#">Search</a>
                </div>
                <div class="clear"> </div>
            </div>
        </div>
    </div>

    @*<div class="to-top">
            <i class="fas fa-arrow-up"></i>
        </div>*@
    <!---- //End-bottom-grids---->
    <!----//End-image-slider---->
    <!---start-footer---->
    <div class="footer">
        <div class="wrap">
            <div class="footer-left">
                <ul>
                    <li><a href="#">United Kingdom</a> <span> </span></li>
                    <li><a href="#">Terms of Use</a> <span> </span></li>
                    <li><a href="#">Nike Inc.</a> <span> </span></li>
                    <li><a href="#">Launch Calendar</a> <span> </span></li>
                    <li><a href="#">Privacy & Cookie Policy</a> <span> </span></li>
                    <li><a href="#">Cookie Settings</a></li>
                    <div class="clear"> </div>
                </ul>
            </div>
            <div class="footer-right">
                <p>
                    &copy; 2022 Spike_shoes. All rights reserved | Template by <a href="http://w3layouts.com/">#</a>
                </p>

                <a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>
            </div>
            <div class="clear"> </div>
        </div>
    </div>

    <!---//End-footer---->

    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>


