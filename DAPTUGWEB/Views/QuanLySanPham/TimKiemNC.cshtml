

@model List<DAPTUGWEB.Models.SANPHAM>
@{
    ViewBag.Title = "TimKiemNC";
    Layout = "~/Views/Layout/QuanTriLayout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MASP", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }
        .submit {
            display: block;
            position: relative;
            padding: 11px 30px;
            letter-spacing: 1px;
            background: #212121;
            font-size: 1em;
            color: #fff;
            font-weight: 600;
            border: none;
            outline: none;
            transition: 0.5s all;
            text-transform: uppercase;
        }
        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemNC", "QuanLySanPham", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center" >
                <tr>
                    <td>
                        <div class="lead"> Mã sản phẩm</div>
                    </td>
                    <td>
                        <input class="my-2 mx-3" type="text" name="masp" value="@ViewBag.masp" />
                    </td>
                    
                </tr>
                <tr>
                    <td><div class="lead"> Tên sản phẩm</div></td>
                    <td>
                        <input class="my-2 mx-3" type="text" name="tensp" value="@ViewBag.tensp" />
                    </td>
                </tr>
                <tr>
                    <td><div class="lead"> Đơn giá từ </div></td>
                    <td>
                        <input class="my-2 mx-3" type="number" name="giaMin" value="@ViewBag.giaMin" />
                        <span class="lead"> Đến</span> <input type="number" name="giaMax" value="@ViewBag.giaMax" />
                    </td>
                </tr>

                <tr>
                    <td></td>

                </tr>
            </table>
            
            <div class="d-flex">
                <input type="submit" class="submit my-4 mr-3" name="submit" value="Tìm kiếm" />
                <input type="button" name="Nhapmoi" class="submit my-4" value="Làm mới" onclick="location.href='@Url.Action("TimKiemNC", "QuanLySanPham/TimKiemNC")'" />

            </div>
            

        }
    </div>
    <div id="gridContent">
        <p class="lead mb-4"> @ViewBag.TB     </p>
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
         grid.Column("MASP","Mã sản phẩm"),
                  grid.Column("TENSP","Tên sản phẩm"), //the model fields to display

        grid.Column("KICHTHUOC","Kích thước"),
         grid.Column("DONGIA","Đơn giá",format:@<text> @item.DONGIA.ToString("#,##0")</text>),
grid.Column("SLTON", "Số lượng tồn"),
grid.Column("NHACC.TENNCC", "Nhà cung cấp"),
grid.Column("LOAISP.TENLSP", "Loại sản phẩm")


}
)
    </div>

</body>
</html>

