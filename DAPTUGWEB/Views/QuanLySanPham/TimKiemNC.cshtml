

@model List<DAPTUGWEB.Models.SANPHAM>
@{
    ViewBag.Title = "TimKiemNC";
    Layout = "~/Views/Layout/QuanTriLayout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MASP", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemNC", "QuanLySanPham", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center">
                <tr>
                    <td>
                        <div> Mã sản phẩm</div>
                    </td>
                    <td>
                        <input type="text" name="masp" value="@ViewBag.masp" />
                    </td>

                </tr>
                <tr>
                    <td>Tên sản phẩm</td>
                    <td>
                        <input type="text" name="tensp" value="@ViewBag.tensp" />
                    </td>

                </tr>


                <tr>
                    <td>Giá từ</td>
                    <td>
                        <input type="text" name="giaMin" value="@ViewBag.giaMin" />
                        Đến<input type="text" name="giaMax" value="@ViewBag.giaMax" />
                    </td>

                </tr>

                
                <tr>
                    <td>Nhà cung cấp</td>
                    <td>
                        @Html.DropDownList("MANCC", null, "Tất cả", htmlAttributes: new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" class="submit" name="submit" value="Tìm kiếm" style="margin-left: 5px;width:100px;
                background-color: blue;color:white" />
                        <input type="button" name="Nhapmoi" class="submit" value="Làm mới" style="margin-left: 5px;width:100px;
                background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiemNC", "QuanLySanPham/TimKiemNC")'" />

                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("TENSP","Tên sản phẩm"), //the model fields to display

        grid.Column("KICHTHUOC","Kích thước"),
         grid.Column("DONGIA","Đơn giá",format:@<text> @item.DONGIA.ToString("#,##0")</text>),
grid.Column("SLTON","Số lượng tồn"),
grid.Column("NHACC.TENNCC","Nhà cung cấp"),
grid.Column("LOAISP.TENLSP","Loại sản phẩm")


}
)
    </div>
    
</body>
</html>

