
@{
    ViewBag.Title = "NhanVien/DangNhap";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}


<link href="~/css/index.css" rel="stylesheet" />
<link href="~/css/menuaccount.css" rel="stylesheet" />
<link href="~/css/Checkout.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-lg-3 mb-3">

            <div class="menu-account ">
                <h3>
                    <span>
                        Tài khoản
                    </span>
                </h3>
            </div>
        </div>
        <div class="col-lg-9">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="account">  Đăng nhập tài khoản </div>
                    @ViewBag.ThongBao
                    <hr />
                    <div class="form-group">
                        <label class="control-label col-md-3 my-3"> Tên đăng nhập</label>
                        <div class="col-md-5">
                            <input type="text" name="Tendnnv" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 my-3"> Mật khẩu</label>
                        <div class="col-md-5">
                            <input type="password" name="Mknv" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="submit" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>








