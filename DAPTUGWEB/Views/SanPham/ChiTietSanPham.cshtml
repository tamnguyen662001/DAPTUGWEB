@using DAPTUGWEB.Models;
@model SANPHAM
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/css/productdetail.css" rel="stylesheet" />


<style>
    .submit {
        display: block;
        position: relative;
        padding: 11px 30px;
        letter-spacing: 1px;
        background: #212121;
        font-size: 1em;
        color: #fff;
        font-weight: 600;
        border: none;
        outline: none;
        transition: 0.5s all;
        text-transform: uppercase;
    }
</style>


<div id="product">
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="clearfix">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12 product-image clearfix">
                                <div class="sp-loading"><img src="~/Image/San_pham/@Model.ANHSP" alt=""><br></div>
                                <div class="sp-wrap">
                                    <a href=""><img src="~/Image/San_pham/@Model.ANHSP"></a>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 clearfix">
                                <h1 class="name m-b-5"><span>@Model.TENSP</span></h1>
                                <div class="product_price p-b-10">
                                    <div ng-if="IsPromotion==true">
                                        <ins class="m-b-5">@Model.DONGIA.ToString("#,##0") VND</ins>
                                    </div>
                                </div>
                                <div>Mã sản phẩm: @Model.MASP</div>
                                <div>Kho: @Model.SLTON</div>
                                <div>Kích thước: @Model.KICHTHUOC</div>
                                <div>
                                    <p class="title">chi tiết sản phẩm</p>

                                    <p class="lead border-top pt-3">
                                        @Model.CHITIETSP
                                    </p>
                                </div>
                                <br />
                                <div class="d-flex">
                                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @maSP = Model.MASP, @url = Request.Url.ToString() }))
                                    {
                                        // <input type="submit" value="Thêm vào giỏ hàng">
                                        <button class="submit" type="submit">Thêm vào giỏ hàng</button>
                                    }
                                    <button class="submit ml-4" onclick="location.href='@Url.Action("Index", "Home")';return false;">Mua tiếp</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!--//tabs-->
</div>



