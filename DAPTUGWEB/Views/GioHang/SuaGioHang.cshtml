@using DAPTUGWEB.Models;
@model List<GioHang>
@{
    ViewBag.Title = "CapNhatGioHang";
    Layout = "~/Views/Layout/MainLayout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "maSP", rowsPerPage: 3);
}

<style type="text/css">
    .grid-footer {
        color: #000;
        font: 17px Calibri;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer a {
            background-color: #ffffff;
            color: blue;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            padding: 1px 10px 2px 10px;
        }

            .grid-footer a:active, a:hover {
                background-color: #ffffff;
                color: #FFAD33;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            }

    .alternatingRowStyle {
        background-color: aliceblue;
    }

    table .table1 {
        text-align: left;
        margin-left: 0px;
        margin-right: 0px;
        width: 800px;
    }

    .tr, .td {
        text-align: center;
        padding-left: 40px;
    }

    #giohang {
        border-collapse: collapse;
        width: 100%;
    }

        #giohang tr {
        }

        #giohang td {
            border: 1px solid #000;
            padding: 8px;
            text-align: center;
            align-items: center;
        }

        #giohang img {
            width: 80px;
            height: 80px;
        }
        #giohang #tieude {
            background: black;
            color: white;
            font-weight: 700;
        }
    .submit {
        display: block;
        position: relative;
        padding: 11px 30px;
        letter-spacing: 1px;
        background: #212121;
        font-size: 1em;
        color: #fff;
        font-weight: 600;
        border: none;
        outline: none;
        transition: 0.5s all;
        text-transform: uppercase;
    }
</style>
<div class="container">

    <table align="center" border="1" id="giohang">
        <tr id="tieude">
            <td> Ảnh sản phẩm</td>

            <td> Mã sản phẩm </td>

            <td>Tên </td>

            <td>Số lượng</td>

            <td>Đơn giá</td>

            <td>Thành tiền</td>
            <td> Chỉnh sửa </td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@Url.Content("~/Image/San_pham/" + item.anhSP)" /></td>

                <td>@item.maSP</td>

                <td>@item.tenSP</td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @maSP = item.maSP })) 
                {
                <td>@Html.TextBox("textSL" , item.soLuong)</td>

                <td>@item.donGia</td>

                <td>@item.thanhTien</td>
                <td>
                    @*<input type="submit" value="Cập nhật " />*@
                    <button class="submit" type="submit">sửa</button>
                    <br />
                    <br />
                    @*@Html.ActionLink("Xoá", "XoaGioHang", new { @maSP = item.maSP })*@
                    <button class="submit" onclick="location.href='@Url.Action("XoaGioHang", "GioHang",new { @maSP = item.maSP })';return false;">Xoá</button>

                </td>
                }
            </tr>
        }
    </table>
</div>
