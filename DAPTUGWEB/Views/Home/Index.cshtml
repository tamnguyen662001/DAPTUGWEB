@using DAPTUGWEB.Models;


@model PagedList.IPagedList<SANPHAM>
@using PagedList.Mvc

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}
<link href="~/css/index.css" rel="stylesheet" />
<style>
    .phantrang li {
        display: inline;
    }
</style>


<div class="container">
    <div class="row pb-3">
        <div class="col-md-12">
            <img class="d-block w-100" src="https://giaydb.com/wp-content/uploads/2020/10/slideshow_1.jpg" alt="">
            
        </div>
    </div>
</div>

<div class="container">

    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-3">

                <div id="mb_verticle_menu" class="menu-quick-select">

                    <div class="title_block">
                        <span>Danh mục sản phẩm</span>
                    </div>

                    <div id="menuverti" class="block_content navbar_menuvertical">
                        <ul class='nav_verticalmenu'>
                            @Html.Action("LoaiSanPhamPartial", "LoaiSanPham")
                        </ul>
                    </div>

                </div>
                <div id="mb_verticle_menu" class="menu-quick-select">

                    <div class="title_block">
                        <span>Nhà cung cấp</span>
                    </div>

                    <div id="menuverti" class="block_content navbar_menuvertical">
                        <ul class='nav_verticalmenu'>
                            @Html.Action("NhaCungCapPartial", "NhaCungCap")
                        </ul>
                    </div>

                </div>
               
            </div>
            @*Trang @(Model.PageCount < Model.PageNumber  ? 0 : Model.PageNumber)/@Model.PageCount;*@
            <div class="col-lg-9">
                <div class="row">
                    @Html.Action("SanPhamPartial", "SanPham")

                    @*<div class="phantrang">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                    </div>*@

                </div>

            </div>
            <div class="clear"> </div>
        </div>
    </div>

    <div class="clear"> </div>
</div>

<script src="~/js/main.js"></script>
